<UserControl x:Class="University.View.Payline.PaylineWorkspace"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:University.View.Payline"
             xmlns:c="clr-namespace:WpfExtensions.Controls;assembly=WpfExtensions"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border
            Grid.Column="0"
            BorderThickness="1"
            BorderBrush="#FF7C7C7C">
            <Expander
                ExpandDirection="Left"
                IsExpanded="True">
                <Expander.Header>
                    <TextBlock Text="Панель навигации">
                        <TextBlock.LayoutTransform>
                            <RotateTransform Angle="90"/>
                        </TextBlock.LayoutTransform>
                    </TextBlock>
                </Expander.Header>
                <ListView
                    x:Name="menu"
                    Width="175"
                    SelectionMode="Single"
                    SelectedIndex="0"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <c:WorkspaceMenuItem
                        Title="Текущий контроль" 
                        URL="/University;component/View/Payline/Pages/ActiveStudents.xaml"/>
                </ListView>
            </Expander>
        </Border>
        <Border
            Grid.Column="2"
            BorderBrush="#FF7C7C7C">
            <Frame 
                NavigationUIVisibility="Hidden" 
                Source="{Binding SelectedItem.URL, ElementName=menu}"/>
        </Border>
    </Grid>
</UserControl>
